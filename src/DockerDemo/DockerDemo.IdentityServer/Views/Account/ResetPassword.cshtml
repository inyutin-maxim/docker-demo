@model ResetPasswordViewModel

@{
	ViewBag.Title = "Восстановление пароля";
	Layout = "_Layout";
}

<div class="content">
	<div class="row no-gutters h-100">
		<div class="col-md-5 col-xl-6 d-none d-md-block picture-container">&nbsp;</div>
		<div class="col-12 col-md-7 col-xl-6 pt-5 pt-md-0 form-container">
			<form asp-action="ResetPasswordComplete" asp-controller="Account" method="post" class="form" asp-antiforgery="true">
				<div class="text-center text-md-left">
					<a href="~/">
						<img class="form_logo" src="~/img/logo.png" alt="Logo"/>
					</a>
				</div>

				<h2 class="text-center text-md-left">@ViewBag.Title</h2>
				<div class="form-group v-required v-password v-hasSymbol v-hasNumber v-hasLetter v-hasLowerLetter v-hasUpperLetter v-minWidth">
					<label class="form-group_label" asp-for="Password">Новый пароль</label>
					<div class="form-group_password-input">
						<input type="password" value="@Model.Password" autocomplete="off" class="form-group_control" asp-for="Password">
						<button type="button" class="form-group_view-password-button">&nbsp;</button>
					</div>
					<span asp-validation-for="Password" class="form-group_hint"></span>
				</div>

				<div class="form-group v-required v-equalPassword">
					<label class="form-group_label" asp-for="ConfirmPassword">Подтверждение пароля</label>
					<div class="form-group_password-input">
						<input type="password" value="@Model.ConfirmPassword" autocomplete="off" class="form-group_control" asp-for="ConfirmPassword">
						<button type="button" class="form-group_view-password-button">&nbsp;</button>
					</div>
					<span asp-validation-for="ConfirmPassword" class="form-group_hint"></span>
				</div>
				<input type="hidden" asp-for="Email">
				<input type="hidden" asp-for="Token">
				<button type="submit" class="button">Сменить пароль</button>
				<div class="mb-5 mb-md-0 text-center">
					<div class="text-sm-right my-3 my-md-0">
						<a asp-action="Login">Войти</a>
					</div>
				</div>
			</form>
			<div class="password-requirements">
				<div class="password-requirements-wrapper">
					<h3>Новый пароль должен содержать:</h3>
					<ul class="requirements-list">
						<li class="requirements-list_item" id="prMinWidth">
							<div>минимум 6 символов</div>
						</li>
						<li class="requirements-list_item" id="prLowerCase">
							<div>
								хотя бы одну строчную латинскую букву &nbsp;<span class="nowrap">('a'-'z')</span>
							</div>
						</li>
						<li class="requirements-list_item" id="prUpperCase">
							<div>хотя бы одну заглавную латинскую букву &nbsp; <span class="nowrap">('A'-'Z')</span></div>
						</li>
						<li class="requirements-list_item" id="prDigit">
							<div>хотя бы одну цифру &nbsp;<span class="nowrap">('0'-'9')</span></div>
						</li>
						<li class="requirements-list_item" id="prAlphanumeric">
							<div>
								хотя бы один спецсимвол &nbsp;
								<span class="nowrap">
									(@@, #, $, %, ^, &, *)
								</span>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>